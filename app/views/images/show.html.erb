<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @image.user.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @image.title %>
</p>

<p>
  <strong>File:</strong>
  <%= image_tag(@image.file, width: '500px', style: 'border-radius: 10px;border: 3px solid #BADA55;') %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @image.created_at %>
</p>

<h2>コメントフォーム</h2>
<%= form_for(@image_comment) do |f| %>
<div class= "field">
<%= f.label :comment %><br>
<%= f.text_field :comment %>
<%= f.hidden_field :image_id, :value => @image.id %>
</div>
<div class="actions">
<%= f.submit %>
</div>
<% end %>

<h2>コメント一覧</h2>
<ul>
<% @image.image_comment.each do |image_comment|%>
<li><%= image_comment.comment %>
<a href="mailto:<%= image_comment.image.user.email %>?Subject=Hello%20again" target="_top"><%= image_comment.image.user.email %></a></li>
<% end %>
</ul>

<%= link_to 'Edit', edit_image_path(@image) %> |
<%= link_to 'Back', images_path %>
